{
  "expo": {
    "name": "Sadarin-app",
    "slug": "Sadarin-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png", // <- Ikon utama, 1024x1024 dengan padding
    "scheme": "sadarinapp",
    "userInterfaceStyle": "automatic",
    "owner": "alfin12345",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.Sadarinapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo-foreground.png", // <- Ikon transparan dengan padding
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.Sadarinapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/logo.png"
    },
    "plugins": [
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": true,
          "supportsPictureInPicture": true
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash.png", // <- Logo splash (dengan padding & transparansi kalau bisa)
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "imageWidth": 200
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": false
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "224d2a04-a1c2-4c6b-8450-bd040415a8eb"
      }
    }
  }
}
